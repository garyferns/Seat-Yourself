<%= link_to 'Home', root_path %>
		<% if current_user %>
		Signed in as: 
		<%= current_user.email %>. <%= link_to "Log out", logout_path("current") %>
      <% else %>
        <%= link_to "Log in", login_path %> or <%= link_to "Sign up", new_user_path %>
      <% end %>

<h1>All Restaurants</h1>

<%= link_to "Create a new restaurant", new_restaurant_path %>

		<% @restaurants.each do |restaurant| %>

				<%= link_to restaurant.name, restaurant %>

				Neighbourhood: <%= restaurant.neighbourhood %>
				Address: <%= restaurant.address %> 
				Price range: <%= restaurant.price_range %> 
				Summary: <%= restaurant.summary %>
				Open time: <%= restaurant.open_time %>
				Close time: <%= restaurant.close_time %>
				Capacity: <%= restaurant.capacity %> 
				

				<% if current_user && restaurant.owner == current_user %>
					<%= link_to 'Edit', edit_restaurant_path(restaurant.id) %>
				<% end %> 
		<% end %>


