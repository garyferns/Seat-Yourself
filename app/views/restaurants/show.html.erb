<h1> <%= @restaurant.name %> </h1>

<%= image_tag(@restaurant.image, height: "100", width: "100") %>

	<p class = 'restaurant-neighbourhood'>
	Neighbourhood: <%= @restaurant.neighbourhood %>
	</p>

	<p class = 'restaurant-address'>
	Address: <%= @restaurant.address %>
	</p>

	<p class = 'restaurant-price'>
	Price range: <%= @restaurant.price_range %>
	</p>

	<p class = 'restaurant-summary'>
	Summary: <%= @restaurant.summary %>
	</p>

	<p class = 'restaurant-opentime'>
	Open time: <%= @restaurant.open_time %>
	</p>

	<p class = 'restaurant-closetime'>
	Close time: <%= @restaurant.close_time %>
	</p>

	<p class = 'restaurant-capacity'>
	Capacity: <%= @restaurant.capacity %>
	</p>


	<% if current_user %>
		<%= link_to 'Make a reservation', new_restaurant_reservation_path(@restaurant.id) %>
	<% end %>


<% @restaurant.reservations.each do |reservation| %>

 <% unless reservation.new_record? %>

	<p class = 'reservation-user'>
		User: <%= reservation.user.email %>
	</p>
	<p class = 'reservation-dinnertime'>
		Time: <%= reservation.dinner_time %>
	</p>
	<p class = 'reservation-partysize'>
		Party Size: <%= reservation.party_size %>
	</p>
	<% end %>
<% end %>




